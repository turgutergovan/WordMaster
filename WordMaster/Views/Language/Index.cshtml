@model IEnumerable<WordMaster.Models.LanguageViewModel>

@{
    ViewData["Title"] = "Language";
}

<h1>Index</h1>

<p>
   <button type="button" class="btn btn-outline-dark"> <a asp-action ="Edit">Create New</a></button>
</p>
<table class="table table-hover table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               <button type="button"  class="btn btn-outline-light"> @Html.ActionLink("Edit", "Edit", new { id=item.Id})  </button>
               <button type="button" class="btn btn-outline-light"> @Html.ActionLink("Details", "Details", new { /*id=item.PrimaryKey */ }) </button>
               <button type="button" class="btn btn-outline-light"> @Html.ActionLink("Delete", "Delete", new { id=item.Id}) </button>
            </td>
        </tr>
}
    </tbody>
</table>
