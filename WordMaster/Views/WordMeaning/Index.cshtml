@model IEnumerable<WordMaster.Models.WordMeaningViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <button type="button" class="btn btn-outline-dark"> <a asp-action ="Edit">Create New</a></button>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meaning)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LangId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WordDefinitionId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meaning)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SelectedWordDefinition.Word)
            </td>
            <td title="@item.SelectedLang.Name">
                @Html.DisplayFor(modelItem => item.SelectedLang.Code)
            </td>
            <td>
                <button type="button" class="btn btn-warning"> @Html.ActionLink("Edit", "Edit", new { id=item.Id})  </button>
               
               <button type="button" class="btn btn-warning"> @Html.ActionLink("Delete", "Delete", new { id=item.Id}) </button>
            </td>
        </tr>
}
    </tbody>
</table>
